<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_over"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="colore.com.colore.gameOver.GameOverActivity"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/thinkingEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/id__level_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:layout_below="@+id/thinkingEmoji"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:id="@+id/id__home_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp" />

    <TextView
        android:id="@+id/id__score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id__highest_score"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright"
        android:fontFamily="serif"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/id__highest_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id__home_icon"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_blue_bright"
        android:fontFamily="serif"
        android:textAlignment="center" />

</RelativeLayout>
